{
	"compilerOptions": {
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"outDir": "./dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*.ts","./src/**/*.js","./example/**/*.ts","./example/**/*.js"]
}
